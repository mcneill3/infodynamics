<%- model_class = Email -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:email_address) %>:</strong></dt>
  <dd><%= @email.email_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email_subject) %>:</strong></dt>
  <dd><%= @email.email_subject %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email_text) %>:</strong></dt>
  <dd><%= @email.email_text %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_id) %>:</strong></dt>
  <dd><%= @email.customer_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              emails_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_email_path(@email), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              email_path(@email),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
