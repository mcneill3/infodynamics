<p id="notice"><%= notice %></p>

<h1>Listing Calls</h1>

<table>
  <thead>
    <tr>
      <th>Phone number</th>
      <th>Contact name</th>
      <th>Recieved at</th>
      <th>Responded</th>
      <th>Is voicemail</th>
      <th>Message</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calls.each do |call| %>
      <tr>
        <td><%= call.phone_number %></td>
        <td><%= call.contact_name %></td>
        <td><%= call.recieved_at %></td>
        <td><%= call.responded %></td>
        <td><%= call.is_voicemail %></td>
        <td><%= call.message %></td>
        <td><%= call.customer %></td>
        <td><%= link_to 'Show', call %></td>
        <td><%= link_to 'Edit', edit_call_path(call) %></td>
        <td><%= link_to 'Destroy', call, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

